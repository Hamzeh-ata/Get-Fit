@page
@model LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
 <div class="container-fluid h-100 ">
   <div class="container h-100 justify-content-between">
    <div class="row h-100 justify-content-center">
     <div class="col-lg-5 col-md-6 col-sm-12 C">
      <form id="account" method="post">
         <div class="Register-form">
           <div class="register-wrap">
              <div class="form-floating">
                  <h3>Email</h3>
                  <div class="d-flex justify-content-center">
                    <input asp-for="Input.Email" class="form-input"  aria-required="true" />
                  </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <h3>Password</h3>
                    <div class="d-flex justify-content-center">
                    <input asp-for="Input.Password" class="form-input" autocomplete="current-password" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <span>Remember me ?</span>
                    <input class="check-input" asp-for="Input.RememberMe" />
                    </div>
                <div class="d-flex justify-content-center login">
                 <button id="login-submit" type="submit" class="login-button">Login</button>
                </div>
                 <div class="options">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                   
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           </div>
           </div>
         
    </form>
        </div>
   
    </div>
      </div>
            </div>

</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
