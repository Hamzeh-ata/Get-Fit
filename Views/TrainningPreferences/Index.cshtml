@model get_fit.Models.Trainee_information
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/TrainningPreferences.css" asp-append-version="true" />
</head>

<section class="main-section">
    <div class="container-fluid ">
        <div class="row">
          <div  class="progress-bar">
         <div class="progress-bar-fill" style="width: 100% ; " ></div>
   </div>
    </div>
      <div class="container">
        <div class="row RC1 justify-content-center">
            <div class="col-lg-5 col-md-6 col-sm-8 ">
                <div class="main">
                    <form method="post">
                     <h1 class="main-text text-center">How much days u can train @TempData["massage"] @TempData["massage2"] </h1>
                        <div class="DaysSelect w-100 d-flex justify-content-center">
                           <select asp-for="WorkoutDays" name="DaysSelect">
                            <option>Select</option>
                            <option>Three days or less per week</option>
                            <option>More than three days per week</option>
                        </select>
                        </div>
                          <h1 class="main-text text-center">How much Hours u spend</h1>
                        <div class="hoursSelect w-100 d-flex justify-content-center">
                           <select  asp-for="WorkoutHours" name="hoursSelect" >
                            <option>Select</option>
                            <option>One hour</option>
                            <option>Two hours</option>
                            <option>More than two hours</option>
                        </select>
                        </div>
                        <div class="submitForm d-flex justify-content-end">
                         <button type="submit">Finsh</button>
                        </div>
                      </form>
                </div>
            </div>
        </div>
         </div>
    </div>
</section>